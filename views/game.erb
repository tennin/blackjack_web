 <%     end                    %>

  <% end %>

<% if player_total > 21   %>
<%         session[:player_cards].select{|v|v[1]=='ace'}.count.times  do%>
 <%             player_total = player_total - 10     %>
<% end %>
<% end %>

</ul>
