<h1>Blackjack</h1>

<p>Welcome <%= session[:player_name] %> </p>



<div class="hero-unit">
Dealer's cards:

<% dealer_total = 0  %>

<ul>
<% session[:dealer_cards].each do  |card|   %>
<% card.to_s   %>
<img src="/images/cards/<%=  "#{card[0]}_#{card[1]}"   %>.jpg">


<%     if card[1] == 'ace'                    %>
 <%         dealer_total = dealer_total + 11                    %>
 <%     elsif card[1].to_i == 0                    %>
 <%         dealer_total = dealer_total + 10                    %>
 <%     else                    %>
 <%         dealer_total = dealer_total + card[1].to_i                    %>
 <%     end                    %>
<% end %>



<% if dealer_total > 21   %>
<%         session[:player_cards].select{|v|v[1]=='ace'}.count.times  do%>
 <%             dealer_total = dealer_total - 10     %>
<% end %>
<% end %>

</ul>

<p>Dealer has total of <%= dealer_total %></p>



<br/>
<% if session[:player_turn] == false  %>

<% if dealer_total < 17    %>
<form action="/game/dealer/hit" method="post">
 <input type="submit" value = "click to see dealer's card"  class="btn btn-warning">

</form>
<%end  %>

<%end  %>

<% if dealer_total > 21   %>
and busted
<% session[:dealer_busted] = true  %>
<% end %>




</div>

